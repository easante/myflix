%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="/tmp/monk_large.jpg")
      .video_info.col-sm-3
        %header
          %h3 Futurama
          %span Rating: #{sprintf('%.1f', @video.rating)} /5.0
        %p "#{@video.description}".
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@review) do |f|
        %fieldset
          .form-group
            %label Rate this video
            .row
              .col-sm-3
                = f.select :stars, Review::STARS.map { |s| ["#{pluralize(s, 'Star')}", s] }, class:'form-control'
          .form-group
            .row
              .col-sm-8
                = f.text_area :comment, label: 'Write Review', rows: 6, class: 'form-control'
        %fieldset.form-group.actions.clearfix
          = f.hidden_field :video_id, value: @video.id
          = f.submit class:"btn"
          %a(href="") Cancel
      %header
        %h3 User Reviews (#{@review_count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-3
                %span Rating: #{review.stars} / 5
                %p by <a href=""> #{reviewer(review)}</a>
              .col-sm-8
                %p #{review.comment}
