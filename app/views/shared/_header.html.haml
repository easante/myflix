%section#top-header.row
  %h1.col-md-2
    - if current_user 
      = link_to "MyFLiX", home_path
    - else
      = link_to "MyFLiX", root_path
  - if current_user 
    %ul.col-md-3.clearfix
      %li= link_to "Videos", home_path
      %li= link_to "My Queue", queue_items_path
      %li= link_to "People", people_path
    = form_tag search_videos_path, class: "col-md-3 navbar-form" do
      .form-group
        %input.form-control(type="text" name="search_word" placeholder="Search for videos here")
      %button.btn.btn-default(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to 'Sign Out', session_path, method: :delete
