%section.invite.container
  .row
    .col-sm-8.col-sm-offset-2
      = bootstrap_form_for @invitation, html: { class: "invite" } do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            .row
              .col-sm-4
                = f.text_field :full_name, label: "Friend's Name", class: "form-control"
        %fieldset
          .form-group
            .row
              .col-sm-4
                =f.email_field :email, label: "Friend's Email Address", class: "form-control"
        %fieldset
          .form-group
            .row
              .col-sm-6
                = f.text_area :message, label: "Invitation Message", rows: 6, placeholder: "Please join this really cool site!", class: "form-control"
        %fieldset.form-group.action
          = f.submit "Send Invitation", class: "btn btn-default"
